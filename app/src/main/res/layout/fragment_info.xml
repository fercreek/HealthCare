<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    <!--android:background="#ffdf6e35"-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:id="@+id/textView3"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/checkBox1"
        android:layout_alignEnd="@+id/checkBox1" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edad"
        android:id="@+id/textView4"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toEndOf="@+id/textView8"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="3"
        android:id="@+id/editText3"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignStart="@+id/editText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sex"
        android:id="@+id/textView8"
        android:layout_below="@+id/editText3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toEndOf="@+id/textView8"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_alignBottom="@+id/textView9"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/masc"
            android:id="@+id/radioButton"
            android:layout_below="@+id/textView4"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignStart="@+id/editText2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fem"
            android:id="@+id/radioButton2"
            android:layout_alignTop="@+id/radioButton"
            android:layout_alignEnd="@+id/editText2" />
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/peso"
            android:id="@+id/textView9"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_toStartOf="@+id/radioGroup"
            android:layout_marginTop="41dp"
            android:layout_below="@+id/textView8"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/peso"
            android:ems="3"
            android:layout_alignStart="@id/editText2"
            android:layout_alignTop="@id/textView9" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kg"
            android:id="@+id/textView5"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_toEndOf="@+id/editText5"
            android:layout_alignBottom="@+id/peso"
            android:layout_alignRight="@+id/textView7"
            android:layout_alignEnd="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/est"
            android:id="@+id/textView6"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_toEndOf="@+id/textView5"
            android:layout_below="@+id/peso"
            android:layout_alignRight="@+id/checkBox1"
            android:layout_alignEnd="@+id/checkBox1" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText5"
            android:inputType="text"
            android:ems="3"
            android:layout_alignTop="@id/textView6"
            android:layout_alignStart="@id/editText2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cm"
            android:id="@+id/textView7"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignBottom="@+id/editText5"
            android:layout_toRightOf="@+id/editText5"
            android:layout_toEndOf="@+id/editText5" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enf"
            android:id="@+id/textView10"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@+id/editText5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/asm"
            android:id="@+id/checkBox"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_toStartOf="@+id/editText5"
            android:layout_alignTop="@+id/checkBox2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arri"
            android:id="@+id/checkBox1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@+id/checkBox"
            android:layout_alignParentStart="false"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hiper"
            android:id="@+id/checkBox2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_toEndOf="@+id/textView10"
            android:layout_below="@+id/textView10"
            android:layout_toRightOf="@+id/textView10" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card"
            android:id="@+id/checkBox3"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignTop="@+id/checkBox1"
            android:layout_toEndOf="@+id/textView10"
            android:layout_alignParentEnd="false"
            android:checked="false" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diab"
            android:id="@+id/checkBox4"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_toEndOf="@+id/editText5"
            android:layout_below="@+id/checkBox1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/act"
            android:id="@+id/infoButton"
            android:ems="10"
            android:layout_toEndOf="@+id/textView10"
            android:layout_below="@+id/checkBox4"
            android:layout_marginTop="45dp"
            android:layout_alignRight="@+id/checkBox2"
            android:layout_alignEnd="@+id/checkBox2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/est"
        android:id="@+id/est"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toStartOf="@+id/radioGroup"
        android:layout_below="@+id/peso"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizado"
        android:id="@+id/updateNot"
        android:layout_below="@+id/infoButton"
        android:layout_alignLeft="@+id/infoButton"
        android:layout_alignStart="@+id/infoButton"
        android:visibility="invisible" />

</RelativeLayout>